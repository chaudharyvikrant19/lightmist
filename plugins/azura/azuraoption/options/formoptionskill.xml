                    description="Skill Title"
                    />
            <field
                    type="color"
                    name="skill_bg"
                    default="#e5e5e5"
                    id="skill_bg"
                    label="Background Color"
                    description="Background Color"
                    />
            <field
                    type="color"
                    name="skill_val"
                    default="#d1d1d1"
                    id="skill_val"
                    label="Skill Color"
                    description="Skill Color"
                    />
            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
