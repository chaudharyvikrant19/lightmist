<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                type="AzuraMedia"
                name="img"
                id="img"
                class="input-xlarge"
                label="Image Source"
                description="Image Source"  />
            <field
                type="text"
                name="captionclass"
                id="captionclass"
                class="input-xlarge"
                label="Caption Extra Class"
                description="Caption Extra Class"  />
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="textarea"
                    name="textContent"
                    id="textContent"
                    label="Image Caption: (Can be use with html tags.)"
                    class="textelement-content"
                    description="Image Caption: (Can be use with html tags.)"
                    cols="24"
                    rows="14" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

