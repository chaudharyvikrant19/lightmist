<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="tabname"
                    id="tabname"
                    class="input-xlarge"
                    default=""
                    label="Tab Name"
                    description="Tab Name"  />
            <field
                    type="text"
                    name="childid"
                    id="childid"
                    class="input-xlarge"
                    default=""
                    label="Child Id"
                    description="Child Id"  />
            <field
                    type="text"
                    name="icon"
                    id="icon"
                    class="input-xlarge"
                    default=""
                    label="Icon"
                    description="Icon"  />
            <field
                    type="radio"
                    name="isactive"
                    id="isactive"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Is Active"
                    description="Is Active">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

