<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="class"
                    id="class"
                    class="input-xlarge"
                    label="Container Class"
                    description="Container Class"  />
            <field
                    type="AzuraMedia"
                    name="img"
                    id="img"
                    class="input-xlarge"
                    label="Product Image"
                    description="Product Image"  />
            <field
                    type="text"
                    name="width"
                    id="width"
                    class="input-xlarge"
                    label="Image Width"
                    description="Image Width"
                    />
            <field
                    type="text"
                    name="height"
                    id="height"
                    class="input-xlarge"
                    label="Image Height"
                    description="Image Height"
                    />
            <field
                    type="text"
                    name="name"
                    id="name"
                    class="input-xlarge"
                    label="Product Name"
                    description="Product Name"
                    />
            <field
                    type="text"
                    name="price"
                    id="price"
                    class="input-xlarge"
                    label="Product Price"
                    description="Product Price"
                    />
            <field
                    type="text"
                    name="btn"
                    id="btn"
                    class="input-xlarge"
                    label="Order Button Text"
                    description="Order Button Text"
                    />
            <field
                    type="text"
                    name="link"
                    id="link"
                    class="input-xlarge"
                    label="Order Button Link"
                    description="Order Button Link"
                    />
            <field 
                name="layout" class="input-xlarge" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuramistbakeryproduct" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

