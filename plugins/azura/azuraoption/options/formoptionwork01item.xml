            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    default="" />
            <field
                    type="hidden"
                    name="columnwidthclass"
                    id="columnwidthclass"
                    label="Column Width Class"
                    description="Column Width Class"
                    />
