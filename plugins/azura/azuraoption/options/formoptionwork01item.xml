<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="AzuraMedia"
                    name="thumb"
                    id="thumb"
                    label="Thumbnail Photo"
                    class="input-xlarge"
                    preview="false"
                    description="Thumbnail Photo" />
            <field
                    type="AzuraMedia"
                    name="full"
                    id="full"
                    label="Light Link"
                    class="input-xlarge"
                    preview="false"
                    description="Leave this blank to use thumbnail image instead" />
            <field
                    type="text"
                    name="title"
                    id="title"
                    class="input-xlarge"
                    label="Title"
                    description="Title"
                    />
            <field
                    type="text"
                    name="subtitle"
                    id="subtitle"
                    class="input-xlarge"
                    label="Subtitle"
                    description="Subtitle"
                    />
            <field
                    type="text"
                    name="filter"
                    id="filter"
                    default=""
                    class="input-xlarge"
                    label="Filter Tags"
                    description="Item filter tags that used to classify works. Separated by a comma (ex: Graphic,Logo,Emotion)"
            />
