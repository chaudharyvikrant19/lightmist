<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                type="text"
                name="date"
                id="date"
                default=""
                class="input-xlarge"
                label="Date"
                description="Date"  />
            <field
                type="AzuraMedia"
                name="img"
                id="img"
                class="input-xlarge"
                label="Timeline Image"
                description="Timeline Image"  />
            <field
                type="text"
                name="width"
                id="width"
                default="200"
                class="input-xlarge"
                label="Image Width"
                description="Image Width"  />
            <field
                type="text"
                name="height"
                id="height"
                default="200"
                class="input-xlarge"
                label="Image Height"
                description="Image Height"  />
            <field
                type="text"
                name="title"
                id="title"
                class="input-xlarge"
                label="Title"
                description="Title"  />
        </fieldset>
    </fields>
    <fields name="elementContent">
        <fieldset name="elementContentFieldSet">
            <field
                    type="textarea"
                    name="textContent"
                    id="textContent"
                    label="Content: (Can be use with html tags.)"
                    class="textelement-content"
                    description="Content: (Can be use with html tags.)"
                    cols="24"
                    rows="14" />
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

