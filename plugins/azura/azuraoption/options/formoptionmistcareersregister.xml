<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="title"
                    id="title"
                    class="azura_w97"
                    label="Title"
                    description="Title" />
            <field
                    type="text"
                    name="receiveemail"
                    id="receiveemail"
                    class="azura_w97"
                    label="Receive Email"
                    description="Receive Email" />
            <field
                    type="text"
                    name="thanksmessage"
                    id="thanksmessage"
                    class="azura_w97"
                    label="Thanks Message"
                    description="Thanks Message" />
            <field
                    type="text"
                    name="emailsubject"
                    id="emailsubject"
                    class="azura_w97"
                    label="Email Subject"
                    description="Email Subject"
                    />
            <field
                    type="radio"
                    name="sendascopy"
                    id="sendascopy"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Show SendAsCopy Field"
                    description="Show SendAsCopy Field" >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    type="text"
                    name="extraclass"
                    id="extraclass"
                    label="Extra Class"
                    description="Extra Class"
                    />

            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuramistcareersregister" client="site"/>
            
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>