<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    class="input-xlarge"
                    label="Id"
                    description="Id"  />
            <field
                    type="text"
                    name="class"
                    id="class"
                    class="input-xlarge"
                    label="Class"
                    description="Class"  />
            <field
                    type="radio"
                    name="isactive"
                    id="isactive"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="Is Active"
                    description="Is Active">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field 
                name="layout" class="input-xlarge" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuramistbakerymenu" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="false"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>

