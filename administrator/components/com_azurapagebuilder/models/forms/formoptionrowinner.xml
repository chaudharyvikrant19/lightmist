<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    class="input-xlarge"
                    label="Row ID"
                    description="Row ID" />
            <field
                    type="text"
                    name="class"
                    id="class"
                    class="input-xlarge"
                    label="Extra Class"
                    description="Extra Class"
                    />
            <field 
                name="layout" label="Shortcode Layout" default="azurarowinner" class="input-xlarge" description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurarowinner" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="showAnimationTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="0"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>